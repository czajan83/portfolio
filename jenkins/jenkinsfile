pipeline { 
    agent any 
    stages {
        stage('Setup') { 
            steps { 
                sh(script: 'cd /home/andrzej/git/portfolio/playwright')
                sh(script: 'npm install')
                sh(script: 'npx playwright install') 
            }
        }        
        stage('Run') { 
            steps { 
                sh(script: 'npm run tests:chrome') 
            }
        }
    }
}
