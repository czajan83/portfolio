pipeline { 
    agent any 
    stages {
        stage('Setup') { 
            steps { 
    			dir('/home/andrzej/git/portfolio/playwright') {
                	sh(script: 'npm install')
                	sh(script: 'npx playwright install') 
                }
            }
        }        
        stage('Run') { 
            steps {
       			dir('/home/andrzej/git/portfolio/playwright') { 
                	sh(script: 'npm run tests:firefox') 
                }
            }
        }
    }
}
